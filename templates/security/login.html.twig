{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
    <div class="LoginForm" id="login">
        <form method="post" class="LoginForm--content">

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <a href="/"><div class="close--LoginForm">{% include 'svg/arrow.svg' %}</div></a>
            <div class="LoginForm--header"><h1 class="h3 mb-3 font-weight-normal">Вход</h1></div>
            <div class="underline"></div>

            <div class="form--login">
                {% if error %}
                    <div class="error">Неверно введена почта или пароль</div>
                {% endif %}
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="email">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Пароль">

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-primary vhodf" type="submit">
                    Войти
                </button>
            </div>
        </form>
    </div>
{% endblock %}
